      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="form-group">
    <%= f.label :name, "Nome do Cliente" %><br>
    <%= f.text_field :name, class: 'namecli' %>
  </div>
 <div class="form-group">
    <%= f.label :telefone %><br>
    <%= f.text_field :telefone %>
  </div>
  <div class="form-group">
    <%= f.label :celular %><br>
    <%= f.text_field :celular %>
  </div>
 <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, class: 'namecli' %>
  </div>

   <%= f.fields_for :locals do |ff| %>
