<%= form_for(@cliente) do |f| %>
  <% if @cliente.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cliente.errors.count, "error") %> prohibited this cliente from being saved:</h2>

      <ul>
      <% @cliente.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="form-group">
    <%= f.label :name, "Nome do Cliente" %><br>
    <%= f.text_field :name, class: 'namecli' %>
  </div>
 <div class="form-group">
    <%= f.label :telefone %><br>
    <%= f.text_field :telefone %>
  </div>
  <div class="form-group">
    <%= f.label :celular %><br>
    <%= f.text_field :celular %>
  </div>
 <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, class: 'namecli' %>
  </div>
  <div class="actions">
  <%= f.submit 'Enviar', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>


<br>

<%= form_for :local, :url=>{:controller=>"local", :action=>"local"}, :html=>{:id=>"local_form"} do |f| %>
 

  <div class="field">
    <%= f.label :cliente_id, "Cliente" %><br>
    <%= f.collection_select(:cliente_id, Cliente.all, :id, :name, prompt: "Selecionar") %>
  </div>
  <div class="field">
    <%= f.label :logra, "Logradouro/Endereço" %><br>
    <%= f.text_field :logra %>
  </div>
  <div class="field">
    <%= f.label :cep, "CEP" %><br>
    <%= f.text_field :cep %>
  </div>
  <div class="field">
    <%= f.label :uf, "Estado" %><br>
    <%= f.text_field :uf %>
  </div>
  <div class="field">
    <%= f.label :city, "Cidade" %><br>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :km, "Distância em KM" %><br>
    <%= f.number_field :km %>
  </div>
  <div class="actions">
<%= f.submit 'Enviar', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
