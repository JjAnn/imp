<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
    <%= f.label :projeto_id, "Projeto da Atividade" %><br>
   
 <%= f.grouped_collection_select :projeto_id, Cliente.order(:name), :projetos, :name, :id, :name, prompt: "Selecionar" %>
  </div>
  <div class="field">
    <%= f.label :seq, "Raiz Sequencial" %><br>
    <%= f.number_field :seq %>
  </div>
  <div class="field">
    <%= f.label :descr, "Descrição da Atividade" %><br>
    <%= f.text_field :descr %>
  </div>
  <div class="field">
    <%= f.label :seqpai, "Ramo Sequencial" %><br>
    <%= f.number_field :seqpai %>
  </div>
  <div class="field">
    <%= f.label :typo, "Tipo da Atividade" %><br>
     <%= f.select("typo", {"Analitica" => "Analitica", "Sintetica" => "Sintetica"}) %>
  </div>
  <div class="field">
    <%= f.label :hour, "Horas de Execução" %><br>
    <%= f.number_field :hour %>
  </div>
  
  <div class="actions">
  <%= f.submit 'Enviar', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
