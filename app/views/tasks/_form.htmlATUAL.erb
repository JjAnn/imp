

<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
  <div id="error_explanation">
  <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

  <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
  <% end %>
  </ul>
</div>
  <% end %>

<table>
  <thead>
    <tr>
      <th><%= f.label :projeto_id, "Projeto da Atividade" %></th>
      <th><%= f.label :seq, "Raiz Sequencial" %></th>
      <th> <%= f.label :seqpai, "Ramo Sequencial" %></th>
      <th><%= f.label :descr, "Descrição da Atividade" %></th>
      <th><%= f.label :typo, "Tipo da Atividade" %></th>
      <th>  <%= f.label :hour, "Horas de Execução" %></th>
     
    </tr>
  </thead>

<tbody class="tabela">
      <tr class="linha">
        <td> <%= f.grouped_collection_select :projeto_id, Cliente.order(:name), :projetos, :name, :id, :name, prompt: "Selecionar" %></td>
        <td><%= f.number_field :seq %></td>
        <td><%= f.number_field :seqpai %></td>
        <td> <%= f.text_field :descr %></td>
        <td><%= f.select("typo", {"Analitica" => "Analitica", "Sintetica" => "Sintetica"}) %></td>
        <td> <%= f.number_field :hour %></td>
     
<td><%= f.button 'Remover', type: 'button', class: 'remover' %></td>
  
      </tr>
 
  </tbody>
</table>

<div class="actions">

   <%= f.button 'Adicionar', type: 'button', class: 'adicionar' %>
  <%= f.submit 'Enviar', class: 'btn btn-primary btn-lg' %>
</div>
<br>
<% end %>
